# Google API (Primary LLM)
GOOGLE_API_KEY=your_google_api_key_here

# Reddit API Credentials
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_CLIENT_ID=your_client_id
REDDIT_USER_AGENT="radicalize_me/1.0 (by /u/your_username)"

# Flask Configuration
FLASK_SECRET_KEY=generate_random_secret_key_here
PORT=5000

# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token
DISCORD_ERROR_WEBHOOK_URL=your_discord_webhook_url_for_errors

# Optional: Keep-alive for production deployment
APP_URL=https://your-app-name.onrender.com
PING_INTERVAL=840

# Search APIs (Optional - for fallback)
GOOGLE_CSE_ID=your_custom_search_engine_id
SERPAPI_API_KEY=your_serpapi_key

# Alternative LLMs (Optional - for fallback)
HUGGINGFACE_API_KEY=your_huggingface_key
GROQ_API_KEY=your_groq_key
